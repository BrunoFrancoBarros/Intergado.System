@model IEnumerable<Intergado.App.ViewModels.FazendaViewModel>

@{
    ViewData["Title"] = "Lista de Fazendas";
}

<h1>@ViewData["Title"]</h1>
<hr />

<p>
    <a class="btn btn-info" asp-action="Create"> Adicionar Fazenda</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a class="btn btn-info" asp-controller="Fazendas" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search" /></a>
                    <a class="btn btn-warning" asp-controller="Fazendas" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-danger" asp-controller="Fazendas" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>
